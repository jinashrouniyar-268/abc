# ADJUST STARTING POSITION (Keyframes)
text_action = bpy.data.actions.get("TextAction")
if text_action:
    try:
        fcurves = list(get_action_fcurves(text_action))
    except AttributeError:
        fcurves = []

    loc_x = None
    loc_z = None
    for fc in fcurves:
        if fc.data_path.endswith("location") and fc.array_index == 0:
            loc_x = fc
        if fc.data_path.endswith("location") and fc.array_index == 2:
            loc_z = fc

    def _set_kp(fc, idx, frame, value):
        if fc and len(fc.keyframe_points) > idx:
            kp = fc.keyframe_points[idx]
            kp.co = (frame, value)
            kp.handle_left.y = value
            kp.handle_right.y = value

    _set_kp(loc_x, 0, 40.0, params["start_x"])
    _set_kp(loc_x, 1, 80.0, params["start_x"])
    _set_kp(loc_x, 2, 150.0, params["start_x"])
    _set_kp(loc_x, 3, 190.0, params["start_x"])

    _set_kp(loc_z, 1, 80.0, params["start_z"])
    _set_kp(loc_z, 2, 150.0, params["start_z"])


